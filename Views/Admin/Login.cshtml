@{
	Layout = "_LoginLayout";
}
@model Assignment_CS5.ViewModels.ViewLogin
<div class="limiter">
	<div class="container-login100 bg-login" >
		<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
			<form class="login100-form validate-form" asp-action="LoginAction" asp-controller="Admin" method="post">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-@TempData["MessageType"]" role="alert">
                            @TempData["Message"]
                    </div>
                }
				<span class="login100-form-title p-b-49">
					Admin Login
				</span>
				<div class="text-danger" asp-validation-summary="All"></div>

				<div class="wrap-input100 validate-input m-b-23" data-validate="Username is required">
					<label class="label-input100" asp-for="UserName">Username</label>
					<input class="input100" asp-for="UserName" name="username" placeholder="Type your username">
					<span class="focus-input100" data-symbol="&#xf206;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Password is required">
					<label class="label-input100" asp-for="Password">Password</label>
					<input class="input100" asp-for="Password" placeholder="Type your password" type="password">
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>

				<div class="text-right p-t-8 p-b-31">
					<a href="#">
						Forgot password?
					</a>
				</div>

				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button type="submit" class="login100-form-btn">
							Login
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


<div id="dropDownSelect1"></div>