@model IEnumerable<Assignment_CS5.Models.OrderDetails>


<div style="margin-top:170px">

    <div class="row m-5">
        
            <table class="table text-light mt-5">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Note</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderDetailId</td>
                            <td><img src="~/images/products/@item.Menu.Image" class="img-thumbnail img-150" /></td>
                            <td>@item.Menu.Name</td>
                            <td>@String.Format("{0:0,0 VNĐ}", @item.Menu.Price)</td>
                            <td>@item.Quantity</td>
                            <td>@String.Format("{0:0,0 VNĐ}", @item.Total)</td>
                            <td>@item.Note</td>
                        </tr>
                    }
                </tbody>
            </table>
        
    </div>
</div>
