<!--  gallary Section  -->
<div id="gallary" class="container-fluid bg-dark text-light py-5 text-center wow fadeIn">
    <h2 class="section-title">OUR MENU</h2>
</div>
    <div class="row justify-content-center">
        <div class="col-sm-7 col-md-4 mb-5">
            <ul class="nav nav-pills nav-justified mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#foods_menu" role="tab" aria-controls="pills-home" aria-selected="true">Foods</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#drinks_menu" role="tab" aria-controls="pills-profile" aria-selected="false">Drinks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#combos_menu" role="tab" aria-controls="pills-profile" aria-selected="false">Combos</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="foods_menu" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="row">
                @foreach(var item in Model)
                {
                    if (item.Status && item.Category.ToString() == "Food")
                    {
                        <div class="col-md-3">
                            <div class="card bg-transparent border my-3 my-md-0">
                                <img src="~/images/products/@item.Image" alt="@item.Name" class="rounded-0 card-img-top mg-responsive">
                                <div class="card-body text-center">
                                    <h1 class=" mb-4"><a asp-action="AddCart" asp-controller="Home" asp-route-id="@item.ProductId" class="badge badge-primary">@String.Format("{0:0,0 VNĐ}", item.Price)</a></h1>
                                    <h4 class="pt20 pb20 ">@item.Name</h4>
                                <p class="text-white ">@item.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                    
                }
                
            </div>
        </div>
        <div class="tab-pane fade" id="drinks_menu" role="tabpanel" aria-labelledby="pills-profile-tab">
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.Status && item.Category.ToString() == "Drink")
                    {
                        <div class="col-md-3">
                            <div class="card bg-transparent border my-3 my-md-0">
                                <img src="~/images/products/@item.Image" alt="@item.Name" class="rounded-0 card-img-top mg-responsive">
                            <div class="card-body text-center">
                                <h1 class=" mb-4"><a asp-action="AddCart" asp-controller="Home" asp-route-id="@item.ProductId" class="badge badge-primary">@String.Format("{0:0,0 VNĐ}", item.Price)</a></h1>
                                <h4 class="pt20 pb20 ">@item.Name</h4>
                                <p class="text-white ">@item.Description</p>
                            </div>
                            </div>
                        </div>
                    }

                }
            </div>
        </div>
        <div class="tab-pane fade" id="combos_menu" role="tabpanel" aria-labelledby="pills-profile-tab">
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.Status && item.Category.ToString() == "Combo")
                    {
                        <div class="col-md-3">
                            <div class="card bg-transparent border my-3 my-md-0">
                                <img src="~/images/products/@item.Image" alt="@item.Name" class="rounded-0 card-img-top mg-responsive">
                            <div class="card-body text-center">
                                <h1 class=" mb-4"><a asp-action="AddCart" asp-controller="Home" asp-route-id="@item.ProductId" class="badge badge-primary">@String.Format("{0:0,0 VNĐ}", item.Price)</a></h1>
                                <h4 class="pt20 pb20 ">@item.Name</h4>
                                <p class="text-white ">@item.Description</p>
                            </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

