@{
	Layout = "_LoginLayout";
}
@model Assignment_CS5.ViewModels.ChangePassword
<div class="limiter">
	<div class="container-login100 bg-login">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
			<form class="login100-form validate-form" asp-action="ChangePw" asp-controller="Customer" method="post">
				@if (TempData["Message"] != null)
				{
					<div class="alert alert-@TempData["MessageType"]" role="alert">
						@TempData["Message"]
					</div>
				}
				<span class="login100-form-title p-b-49">
					Change Password
				</span>
				<div class="text-danger" asp-validation-summary="All"></div>
				<div class="wrap-input100 validate-input" data-validate="Old password is required">
					<label class="label-input100" asp-for="Password">Old password</label>
					<input class="input100" asp-for="Password" type="password" placeholder="Type your new password">
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="New password is required">
					<label class="label-input100" asp-for="NewPassword">New password</label>
					<input class="input100" asp-for="NewPassword" type="password" placeholder="Type your new password">
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>
				<div class="wrap-input100 validate-input" data-validate="Confirm password is required">
					<label class="label-input100" asp-for="ConfirmNewPassword">Confirm password</label>
					<input class="input100" asp-for="ConfirmNewPassword" type="password" placeholder="Confirm your new password">
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>


				<div class="container-login100-form-btn mt-3">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button type="submit" class="login100-form-btn">
							Change
						</button>
					</div>
				</div>

			</form>
		</div>
	</div>
</div>


<div id="dropDownSelect1"></div>